<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_SpacerJetPack</defName>
    <label>jet pack</label>
    <description>An ancillary jet pack that can be strapped to the back.</description>
    <techLevel>Spacer</techLevel>
    <tickerType>Normal</tickerType>
    <thingClass>JetPack.JetPackApparel</thingClass>
    <comps>
      <li Class="JetPack.CompProperties_JetPack">
        <JPFuelLevel>0</JPFuelLevel>
        <JPFuel>Chemfuel</JPFuel>
        <JPFuelMaximum>150</JPFuelMaximum>
        <JPFuelBurnRate>1.0</JPFuelBurnRate>
        <JPSKType>SFJetPack</JPSKType>
      </li>
    </comps>
    <graphicData>
      <texPath>Things/Item/SpacerJetPack/SpacerJetPack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
    <generateCommonality>0.001</generateCommonality>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>7</Mass>
      <Flammability>0.5</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
      <MarketValue>400</MarketValue>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <costList>
      <ComponentSpacer>2</ComponentSpacer>
      <Plasteel>60</Plasteel>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.1</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <wornGraphicPath>Things/Item/SpacerJetPack/SpacerJetPack</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <tags>
        <li>SpacerMilitary</li>
        <li>RoyalCombatGear</li>
      </tags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>
  <RecipeDef>
    <defName>MakeJPSpacerJetPack</defName>
    <label>Make Jet Pack</label>
    <description>Make 1 Jet Pack</description>
    <jobString>Making a Jet Pack</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>12000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Leathers</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
        <li>Plasteel</li>
      </thingDefs>
      <categories>
        <li>Leathers</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <Apparel_SpacerJetPack>1</Apparel_SpacerJetPack>
    </products>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>9</Crafting>
    </skillRequirements>
    <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    <researchPrerequisite>PowArmJetPack</researchPrerequisite>
  </RecipeDef>
  <!-- Dismantle -->
  <RecipeDef>
    <defName>DismantleJPSpacerJetPack</defName>
    <label>Dismantle Jet Pack</label>
    <description>Dismantle 1 Jet Pack</description>
    <jobString>Dismantle a Jet Pack</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2500</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Apparel_SpacerJetPack</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Apparel_SpacerJetPack</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasteel>10</Plasteel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </products>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>9</Crafting>
    </skillRequirements>
    <researchPrerequisite>PowArmJetPack</researchPrerequisite>
  </RecipeDef>
</Defs>