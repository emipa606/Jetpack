<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ApparelBase">
    <defName>Apparel_BoosterJetPack</defName>
    <label>booster pack</label>
    <description>A booster pack that can be strapped to the back. This design is tailored for smaller ranged jumps but with improved mobility.</description>
    <techLevel>Spacer</techLevel>
    <tickerType>Normal</tickerType>
    <thingClass>JetPack.JetPackApparel</thingClass>
    <comps>
      <li Class="JetPack.CompProperties_JetPack">
        <JPFuelLevel>0</JPFuelLevel>
        <JPFuel>Chemfuel</JPFuel>
        <JPFuelMaximum>120</JPFuelMaximum>
        <JPFuelBurnRate>1.0</JPFuelBurnRate>
        <JPSKType>SFBoostPack</JPSKType>
        <JPJumpMax>10</JPJumpMax>
      </li>
    </comps>
    <graphicData>
      <texPath>Things/Item/BoosterJetPack/BoosterJetPack</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1.0</drawSize>
    </graphicData>
    <generateCommonality>0.002</generateCommonality>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <Mass>5</Mass>
      <Flammability>0.5</Flammability>
      <ArmorRating_Sharp>1.00</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.36</ArmorRating_Blunt>
      <ArmorRating_Heat>0.9</ArmorRating_Heat>
      <Insulation_Cold>4</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
      <EquipDelay>5</EquipDelay>
      <MarketValue>350</MarketValue>
      <SellPriceFactor>0.70</SellPriceFactor>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.07</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <apparel>
      <careIfWornByCorpse>false</careIfWornByCorpse>
      <wornGraphicPath>Things/Item/BoosterJetPack/BoosterJetPack</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <bodyPartGroups>
        <li>Waist</li>
      </bodyPartGroups>
      <tags>
        <li>SpacerMilitary</li>
        <li>RoyalCombatGear</li>
      </tags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <thingSetMakerTags>
      <li>RewardSpecial</li>
    </thingSetMakerTags>
  </ThingDef>
  <RecipeDef>
    <defName>MakeJPBoosterJetPack</defName>
    <label>Make Booster Pack</label>
    <description>Make 1 Booster Pack</description>
    <jobString>Making a Booster Pack</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Crafting</workSkill>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>10000</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentSpacer</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>Leathers</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ComponentSpacer</li>
        <li>Plasteel</li>
      </thingDefs>
      <categories>
        <li>Leathers</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <Apparel_BoosterJetPack>1</Apparel_BoosterJetPack>
    </products>
    <recipeUsers>
      <li>FabricationBench</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>9</Crafting>
    </skillRequirements>
    <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    <researchPrerequisite>PowArmJetPack</researchPrerequisite>
  </RecipeDef>
