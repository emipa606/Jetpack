<Defs>
  <!-- Back Jet Pack -->
  <ThingDef ParentName="SkyfallerBase">
    <defName>SFJetPack</defName>
    <label>JetPack Skyfaller</label>
    <thingClass>JetPack.JPSkyFaller</thingClass>
    <size>(1, 1)</size>
    <useHitPoints>false</useHitPoints>
    <drawOffscreen>true</drawOffscreen>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Skyfaller</altitudeLayer>
    <drawerType>RealtimeOnly</drawerType>
    <skyfaller>
      <movementType>ConstantSpeed</movementType>
      <shadow>Things/Skyfaller/SkyfallerShadowRectangle</shadow>
      <shadowSize>(1, 1)</shadowSize>
      <rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
      <motesPerCell>5</motesPerCell>
      <speed>0.10</speed>
      <hitRoof>true</hitRoof>
